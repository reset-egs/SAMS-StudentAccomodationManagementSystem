@page "{no}"
@model SAMS.Pages.Students.DeleteStudentModel
@{
    ViewData["Title"] = "Delete Student";
}
<h3>Are you sure you want to delete this student?</h3>
<h4 style="color:red;">The associated leasings will also be removed!</h4>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Student_No)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Student_No)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.SName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.SName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.SAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.SAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Has_Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Has_Room)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Registration_Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Registration_Date)
            </dd>
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>