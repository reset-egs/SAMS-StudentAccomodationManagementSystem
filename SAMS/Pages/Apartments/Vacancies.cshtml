@page "{no}"
@model SAMS.Pages.Apartments.VacanciesModel
@{
    ViewData["Title"] = $"Vacant rooms";
}
<h5>Vacant rooms for apartment located at {@Model.Apartment.Address}</h5>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>Place No.</th>
            <th>Room No.</th>
            <th>Rent Per Semester</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Rooms)
        {
            <tr>
                <td>@item.Place_No</td>
                <td>@item.Room_No</td>
                <td>@item.Rent_Per_Semester</td>
                <td><a asp-page="/Leasings/CreateLeasing" asp-Route-pNo="@item.Place_No" class="btn btn-primary">Assign room to a student</a></td>
            </tr>
        }
    </tbody>
</table>