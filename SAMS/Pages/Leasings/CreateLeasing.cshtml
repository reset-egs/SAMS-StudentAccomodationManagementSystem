@page "{pNo}"
@model SAMS.Pages.Leasings.CreateLeasingModel
@{
    ViewData["Title"] = "New leasing";
}
<h5>Create new leasing for room No. @Model.Place_No</h5>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Leasing.Date_From"  class="control-label"></label>
                <input type = "datetime" value="2022-07-01 00:00:00" asp-for="@Model.Leasing.Date_From" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Leasing.Date_To" class="control-label"></label>
                <input type = "datetime" value="2022-12-31 00:00:00" asp-for="@Model.Leasing.Date_To" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Rooms/GetRooms">Back to List</a>
</div>